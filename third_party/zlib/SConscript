# RT-Thread building script for zlib

from building import *

# get current directory
cwd = GetCurrentDir()

src = Glob('src/*.c')

if GetDepend('ZLIB_USING_SAMPLE'):
    src += Glob('zlib_sample.c')

CPPPATH = [cwd + '/src']

group = DefineGroup('zlib', src, depend = ['PKG_USING_ZLIB'], CPPPATH = CPPPATH)

Return('group')
